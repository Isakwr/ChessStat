{
    "manifest_version": 3,
    "name": "ChessStat",
    "description": "Get statistics from your chess games",
    "version": "1.0",
    "action":{
        "default_popup": "popup.html",
        "default_icon": "good_png.png"
    },
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "permissions":[
        "storage",
        "webRequest",
        "background",
        "tabs"
    ],
    "host_permissions":[
        "<all_urls>"
    ]

    
}